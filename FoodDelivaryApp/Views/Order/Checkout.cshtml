@model FoodDeliveryApp.Models.Order

@{
    ViewData["Title"] = "Оформление заказа";
}

<h2 class="mb-4"><i class="fas fa-shopping-bag"></i> Оформление заказа</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Данные для доставки</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="CustomerName" class="form-label">Имя *</label>
                        <input asp-for="CustomerName" class="form-control" placeholder="Введите ваше имя">
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">Телефон *</label>
                        <input asp-for="Phone" class="form-control" placeholder="+7 (999) 123-45-67">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">Адрес доставки *</label>
                        <textarea asp-for="Address" class="form-control" rows="3" placeholder="Улица, дом, квартира"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Примечания к заказу</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Комментарии для курьера"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Способ оплаты</label>
                        <div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="payment" id="cash" checked>
                                <label class="form-check-label" for="cash">Наличными при получении</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="payment" id="card">
                                <label class="form-check-label" for="card">Картой онлайн</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="payment" id="cardOnDelivery">
                                <label class="form-check-label" for="cardOnDelivery">Картой при получении</label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-check"></i> Подтвердить заказ
                        </button>
                        <a href="/Cart" class="btn btn-outline-secondary">Вернуться в корзину</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Ваш заказ</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.CartItems != null)
                {
                    foreach (var item in ViewBag.CartItems)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>@item.MenuItem.Name × @item.Quantity</span>
                            <span>@((item.MenuItem.Price * item.Quantity).ToString("C"))</span>
                        </div>
                    }
                    <hr>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Стоимость товаров:</span>
                        <span>@ViewBag.TotalAmount.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Доставка:</span>
                        <span>150.00 ₽</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <strong>Итого к оплате:</strong>
                        <strong>@(((decimal)ViewBag.TotalAmount + 150).ToString("C"))</strong>
                    </div>
                }
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-body">
                <h6><i class="fas fa-info-circle text-info"></i> Информация о доставке</h6>
                <ul class="small">
                    <li>Минимальная сумма заказа: 500 ₽</li>
                    <li>Время доставки: 30-60 минут</li>
                    <li>Бесплатная доставка от 1500 ₽</li>
                    <li>Работаем с 10:00 до 23:00</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}