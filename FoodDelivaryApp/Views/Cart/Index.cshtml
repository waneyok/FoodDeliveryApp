@model List<FoodDeliveryApp.Models.CartItem>

@{
    ViewData["Title"] = "Корзина";
    decimal total = 0;
}

<h2 class="mb-4"><i class="fas fa-shopping-cart"></i> Ваша корзина</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>Корзина пуста</h4>
        <p>Добавьте товары из меню ресторанов.</p>
        <a href="/Home/Restaurants" class="btn btn-primary">Перейти к ресторанам</a>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            @foreach (var item in Model)
            {
                total += item.MenuItem.Price * item.Quantity;
                <div class="cart-item">
                    <div class="row align-items-center">
                        <div class="col-md-2">
                            <img src="@item.MenuItem.ImageUrl" alt="@item.MenuItem.Name" class="img-fluid rounded" style="max-height: 80px;">
                        </div>
                        <div class="col-md-4">
                            <h5>@item.MenuItem.Name</h5>
                            <small class="text-muted">@item.MenuItem.Restaurant.Name</small>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group">
                                <form method="post" action="/Cart/UpdateCart" class="d-flex">
                                    <input type="hidden" name="id" value="@item.Id">
                                    <input type="number" name="quantity" value="@item.Quantity" min="1" max="10" class="form-control form-control-sm" style="width: 70px;">
                                    <button type="submit" class="btn btn-sm btn-outline-primary ms-2">
                                        <i class="fas fa-sync-alt"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <h5>@((item.MenuItem.Price * item.Quantity).ToString("C"))</h5>
                            <small>@item.MenuItem.Price.ToString("C") × @item.Quantity</small>
                        </div>
                        <div class="col-md-1">
                            <form method="post" action="/Cart/RemoveFromCart">
                                <input type="hidden" name="id" value="@item.Id">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
            
            <div class="mt-3">
                <a href="/Cart/ClearCart" class="btn btn-outline-danger">
                    <i class="fas fa-trash"></i> Очистить корзину
                </a>
                <a href="/Home/Restaurants" class="btn btn-outline-primary">
                    <i class="fas fa-plus"></i> Добавить еще
                </a>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Итого</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Стоимость товаров:</span>
                        <span>@total.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Доставка:</span>
                        <span>150.00 ₽</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Общая сумма:</strong>
                        <strong>@((total + 150).ToString("C"))</strong>
                    </div>
                    <a href="/Order/Checkout" class="btn btn-success btn-lg w-100">
                        <i class="fas fa-check"></i> Перейти к оформлению
                    </a>
                </div>
            </div>
        </div>
    </div>
}